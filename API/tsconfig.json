{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "rootDir": "./public/ts",
    "outDir": "./public/js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2016", "dom"]
  },
  "include": ["public/ts/**/*"],
  "exclude": ["node_modules"]
}